{
  "expo": {
    "name": "HeightScale",
    "slug": "height-scale",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to your Mi Body Composition Scale 2 and read your measurements.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to your Mi Body Composition Scale 2 and read your measurements."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.heightscale.app"
    },
    "plugins": [
      "expo-asset",
      "expo-font",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to your scale"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "79e01682-6805-4b2f-95e1-7cbd72bfa17c"
      }
    }
  }
}
